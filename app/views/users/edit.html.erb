<div class="edit-body">
  <h3 class="edit-title">プロフィール編集</h3>
  <div class="edit-form">
    <%= form_with(model: @user, local: true, method: :put) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group form-inline">
        <%= f.label :name, 'アカウント名', class: "col-sm-4 control-label" %>
        <%= f.text_field :name, class: 'col-sm-8 form-control' %>
      </div>
      <div class="form-group form-inline">
        <%= f.label :email, 'メールアドレス', class: "col-sm-4 control-label" %>
        <%= f.email_field :email, class: 'col-sm-8 form-control' %>
      </div>
      <div class="form-group form-inline">
        <%= f.label :sex, "性別", class: "col-sm-4 control-label" %>
        <%= f.select :sex, [["男", "male"], ["女", "female"]], {include_blank: '選んでください'}, class: "col-sm-8 form-control" %>
      </div>
      <div class="form-group form-inline">
        <%= f.label :introduction, '自己紹介', class: "col-sm-4 control-label" %>
        <%= f.text_area :introduction, class: 'col-sm-8 form-control', rows: 3 %>
      </div>
      <div class="form-group form-inline">
        <%= f.label :icon, 'アイコン画像', class: "col-sm-4 control-label" %>
        <%= f.file_field :icon, class: 'col-sm-8 form-control-file' %>
      </div>
      <%= f.submit '変更する', class: 'edit-btn btn btn-primary' %>
    <% end %>
    <p><%= link_to  'パスワードを変更する方はこちら',   edit_pass_user_path(@user) %></p>
  </div>
</div>
