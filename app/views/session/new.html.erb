<div class="enter-body" style="margin-top: 100px;">
  <h3 class="enter-title">GIFTY!</h3>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
      </div>
      <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
    <% end %>
    <p class="enter-message"><%= link_to 'アカウントをお持ちでない方はこちら', signup_path %></p>
</div>